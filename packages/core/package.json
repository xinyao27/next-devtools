{
  "name": "@next-devtools/core",
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://github.com/xinyao27/next-devtools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinyao27/next-devtools.git",
    "directory": "packages/devtools"
  },
  "author": {
    "name": "Xinyao",
    "email": "hi@xinyao.me"
  },
  "files": [
    "*.cjs",
    "*.d.ts",
    "*.js",
    "*.mjs",
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "dev": "./src/index.ts",
      "types": "./dist/index.d.mts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./plugin": {
      "dev": "./src/plugin.ts",
      "types": "./plugin.d.ts",
      "require": "./dist/plugin.js",
      "import": "./dist/plugin.mjs"
    },
    "./types": {
      "types": "./types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "cross-env DEV=false tsup",
    "dev": "cross-env DEV=true tsup --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@next-devtools/shared": "workspace:*",
    "@next/env": "^14.2.18",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "address": "^2.0.3",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "execa": "^9.5.1",
    "fast-glob": "^3.3.2",
    "fkill": "^9.0.0",
    "fs-extra": "^11.2.0",
    "get-port-please": "^3.1.2",
    "is-installed-globally": "^1.0.0",
    "mime-types": "^2.1.35",
    "nypm": "^0.3.12",
    "react-dev-inspector": "^2.0.1",
    "react-docgen": "^7.1.0",
    "semver": "^7.6.3",
    "sirv": "^3.0.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.3.12",
    "@types/semver": "^7.5.8",
    "@types/ws": "^8.5.13",
    "esbuild-plugin-file-path-extensions": "^2.1.3",
    "next": "^14.2.18",
    "webpack": "^5.96.1"
  }
