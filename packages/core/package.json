{
  "name": "@next-devtools/core",
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://github.com/xinyao27/next-devtools",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinyao27/next-devtools.git",
    "directory": "packages/devtools"
  },
  "author": {
    "name": "Xinyao",
    "email": "hi@xinyao.me"
  },
  "files": [
    "*.cjs",
    "*.d.ts",
    "*.js",
    "*.mjs",
    "*.mts",
    "dist"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      }
    },
    "./plugin": {
      "require": {
        "types": "./dist/cjs/plugin.d.ts",
        "default": "./dist/cjs/plugin.js"
      },
      "import": {
        "types": "./dist/es/plugin.d.mts",
        "default": "./dist/es/plugin.mjs"
      }
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production PACKAGE_NAME=@next-devtools/core VERSION=$(node -e 'console.log(require(`./package.json`).version)') bunchee --no-clean --external next,react --env=NODE_ENV,PACKAGE_NAME,VERSION",
    "dev": "cross-env NODE_ENV=development PACKAGE_NAME=@next-devtools/core VERSION=$(node -e 'console.log(require(`./package.json`).version)') bunchee --no-clean --external next,react --env=NODE_ENV,PACKAGE_NAME,VERSION --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@next-devtools/shared": "workspace:*",
    "@next/env": "^14.2.18",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "address": "^2.0.3",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "execa": "^9.5.1",
    "fast-glob": "^3.3.2",
    "fkill": "^9.0.0",
    "fs-extra": "^11.2.0",
    "get-port-please": "^3.1.2",
    "is-installed-globally": "^1.0.0",
    "mime-types": "^2.1.35",
    "nypm": "^0.3.12",
    "react-dev-inspector": "^2.0.1",
    "react-docgen": "^7.1.0",
    "semver": "^7.6.3",
    "sirv": "^3.0.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/react": "catalog:react19",
    "@types/semver": "^7.5.8",
    "@types/ws": "^8.5.13",
    "next": "catalog:next15",
    "webpack": "^5.96.1"
  }
}
