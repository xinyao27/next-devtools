{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build", "^@next-devtools/shared#build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:app": {
      "cache": false,
      "persistent": true
    },
    "dev:pages": {
      "cache": false,
      "persistent": true
    },
    "docs": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "cache": false,
      "dependsOn": ["^docs:build"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
