{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:app": {
      "cache": false,
      "persistent": true
    },
    "dev:pages": {
      "cache": false,
      "persistent": true
    },
    "docs": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "cache": false,
      "dependsOn": [
        "^docs:build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    }
  }
}
