{
  "eslint.useFlatConfig": true,
  "prettier.enable": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "astro",
    "css",
    "less",
    "scss",
    "pcss",
    "postcss"
  ],
  "html.format.enable": false
}
