{
  "name": "@next-devtools/monorepo",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@9.13.2",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Xinyao",
    "email": "hi@xinyao.me"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "up": "taze major -Ir",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "release": "release-it",
    "preRelease": "release-it --preRelease=beta --npm.tag=beta",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "publish": "pnpm run build && pnpm -r publish",
    "build": "turbo run build --force",
    "dev": "turbo run dev dev:app",
    "dev:devtools": "turbo run dev",
    "dev:app": "turbo run dev:app",
    "dev:pages": "turbo run dev:pages",
    "docs": "turbo run docs",
    "docs:build": "turbo run docs:build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^9.0.3",
    "@xystack/style-guide": "catalog:",
    "commitizen": "^4.3.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "catalog:",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "catalog:",
    "release-it": "^17.10.0",
    "rimraf": "^5.0.10",
    "taze": "^0.18.0",
    "tsup": "^8.3.5",
    "turbo": "^2.3.0",
    "typescript": "catalog:"
  },
  "prettier": "@xystack/style-guide/prettier"
}
