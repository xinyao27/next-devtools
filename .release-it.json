{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release ${version}"
  },
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true
  },
  "npm": {
    "publish": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "package.json",
      "out": "packages/*/package.json"
    }
  },
  "hooks": {
    "before:init": ["npm run lint"],
    "after:bump": "npm run build",
    "after:release": "echo Successfully released ${name} v${version}."
  }
}
